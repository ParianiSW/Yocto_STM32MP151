&rcc{
	pinctrl-names = "default";
	pinctrl-0 = <&rcc_pins_mx>;
	status = "okay";

	/* USER CODE BEGIN rcc */
	/* CLK_CKPER_DISABLED -> CLK_CKPER_HSE*/
